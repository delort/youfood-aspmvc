@model tmf.entities.Menu

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Menu</legend>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Prix</div>
    <div class="display-field">@String.Format("{0:F}", Model.Prix)</div>

    <div class="display-label">ProductType</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.ProductType).ToString()</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


