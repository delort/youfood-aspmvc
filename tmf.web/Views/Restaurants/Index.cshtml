@model IEnumerable<tmf.entities.Restaurant>

@{
    ViewBag.Title = "Restaurants";
}

<h2><span class="titleContent">Restaurants</h2></span>

<div class="createNewButton">
    @Html.ActionLink("Create restaurant", "Create")
</div>
   <div class="bodyContent">
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Orders
        </th>
        <th>
            Zones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@(item.Orders == null ? "None" : item.Orders.Count.ToString())
        </td>
        <td>
			@(item.Zones == null ? "None" : item.Zones.Count.ToString())
        </td>
    </tr>
}

</table>
    </div>

    </div>