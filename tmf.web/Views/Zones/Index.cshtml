@model IEnumerable<tmf.entities.Zone>

@{
    ViewBag.Title = "Zones";
}

<h2><span class="titleContent">Zones</span></h2>

<div class="createNewButton">
    @Html.ActionLink("Create zone", "Create")
</div>
<div class="bodyContent">
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Waiter
        </th>
        <th>
            Orders
        </th>
        <th>
            Restaurant
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Waiter).ToString()
        </td>
        <td>
			@(item.Orders == null ? "None" : item.Orders.Count.ToString())
        </td>
        <td>
			@(item.Restaurant == null ? "None" : item.Restaurant.Name)
        </td>
    </tr>
}

</table>

</div>
